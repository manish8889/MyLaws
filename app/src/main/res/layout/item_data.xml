<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="4"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Labels -->
    <TextView
        android:id="@+id/labelCrimeHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crime Head: "
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/labelIPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPC: "
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/labelBNS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BNS: "
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/labelIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punishment: "
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

    <!-- Empty view for layout width -->
    <View
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal" />

    <!-- Responses -->
    <TextView
        android:id="@+id/textCrimeHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/textIPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBNS"
        android:layout_column="2"
        android:layout_row="1"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/textBNS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorCrimeHead"
        android:layout_column="2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/textPunishment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_column="2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_row="3"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="2dp" />

</GridLayout>
